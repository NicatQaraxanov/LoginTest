@{
    ViewData["Title"] = "Home Page";
}
@model UserLoginViewModel

<form method="post" asp-action="Login">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control mb-3" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" asp-for="Login">
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control mb-3" id="exampleInputPassword1" placeholder="Password" asp-for="Pass">
            <span asp-validation-for="Pass" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" asp-controller="Home" asp-action="Login">Submit</button>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
